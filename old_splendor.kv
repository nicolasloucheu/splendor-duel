TableLayout:


<TableLayout@BoxLayout>:
    orientation: 'vertical'
    spacing: 10
    Player2Field
    MiddleBoard
    Player1Field

<Player1Field@BoxLayout>
    size_hint: .75, .3
    pos_hint: { 'center_x': .5 }
    Button:
        text: 'player1_hand'
    Button:
        text: 'player1_reserved'
    Button:
        text: 'player1_owned_tokens'
    Button:
        text: 'player1_owned_scrolls'

<Player2Field@BoxLayout>
    size_hint: .75, .3
    pos_hint: { 'center_x': .5 }
    Button:
        text: 'player2_hand'
    Button:
        text: 'player2_reserved'
    Button:
        text: 'player2_owned_tokens'
    Button:
        text: 'player2_owned_scrolls'

<MiddleBoard@BoxLayout>
    BoxLayout:
        spacing: 5
        RoyalCards:
            size_hint: .25, 1
        RelativeLayout:
            size_hint: .1, 1
            canvas:
                Color:
                    rgba: 0, 0, 1, .5
                Ellipse:
                    size: self.width, self.width
                    pos: 0, self.height*1/4
                Ellipse:
                    size: self.width, self.width
                    pos: 0, self.height*2/4
                Ellipse:
                    size: self.width, self.width
                    pos: 0, self.height*3/4
        Button:
            text: 'B3'
        BoxLayout:
            spacing: 2
            size_hint: .75, 1
            Button:
                text: 'B40'
            Button:
                text: 'B41'
            Button:
                text: 'B42'

<RoyalCards@BoxLayout>
    BoxLayout:
        orientation: 'vertical'
        spacing: 10